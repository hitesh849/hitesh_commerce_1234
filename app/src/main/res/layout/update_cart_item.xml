<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@mipmap/add_item_background"
    android:orientation="vertical"
    android:padding="@dimen/dim_16">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Item"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_dim_15"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_5"
        android:layout_weight="10"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dim_1">


        <TextView
            android:id="@+id/txtNameUpdateCartItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_5"
            android:layout_weight="7"
            android:padding="@dimen/dim_5"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_dim_15" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center">

            <Button
                android:id="@+id/btnMinusUpdateCartItem"
                android:layout_width="@dimen/dim_24"
                android:layout_height="@dimen/dim_24"
                android:background="@drawable/rouneded_blue_bg"
                android:gravity="center"
                android:text="-"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_dim_15" />

            <TextView
                android:id="@+id/txtQuantityUpdateItem"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dim_10"
                android:layout_marginRight="@dimen/dim_10"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_dim_16" />

            <Button
                android:id="@+id/btnPlusUpdateItem"
                android:layout_width="@dimen/dim_24"
                android:layout_height="@dimen/dim_24"
                android:background="@drawable/rouneded_blue_bg"
                android:gravity="center"
                android:text="+"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_dim_15" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dim_5"
        android:layout_marginTop="@dimen/dim_15"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtDismissUpdateItem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dim_20"
            android:background="@drawable/background_selector"
            android:padding="@dimen/dim_5"
            android:text="DISMISS"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_dim_15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtUpdateCartItem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dim_20"
            android:background="@drawable/background_selector"
            android:padding="@dimen/dim_5"
            android:text="UPDATE"
            android:textColor="@color/dark_pink"
            android:textSize="@dimen/text_dim_15"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>