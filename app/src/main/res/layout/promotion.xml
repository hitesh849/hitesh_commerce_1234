<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/add_cash_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_16"
        android:layout_marginRight="@dimen/dim_16"
        android:layout_marginTop="@dimen/dim_8"
        android:text="Promotion"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_dim_15"
        android:textStyle="bold" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim_20"
        android:gravity="center">

        <EditText
            android:id="@+id/etextPromotion"
            style="@style/et_new_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_promo_code"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dim_5"
        android:layout_marginTop="@dimen/dim_20"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtCancelPromotion"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dim_20"
            android:background="@drawable/background_selector"
            android:padding="@dimen/dim_5"
            android:text="CANCEL"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_dim_15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtApplyPromotion"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dim_20"
            android:background="@drawable/background_selector"
            android:padding="@dimen/dim_5"
            android:text="APPLY"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_dim_15"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
