<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/add_cash_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_16"
        android:layout_marginRight="@dimen/dim_16"
        android:layout_marginTop="@dimen/dim_8"
        android:text="SAVE SALE"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_dim_15"
        android:textStyle="bold" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_20">

        <EditText
            android:id="@+id/etxtListNameSaveSaleDialog"
            style="@style/et_new_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_16"
            android:layout_marginRight="@dimen/dim_16"
            android:hint="WebPos Save Sale"
            android:inputType="text"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dim_5"
        android:layout_marginLeft="@dimen/dim_16"
        android:layout_marginRight="@dimen/dim_16"
        android:layout_marginTop="@dimen/dim_15"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtSaveSaleDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dim_10"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_light"
            android:gravity="center"
            android:padding="@dimen/dim_5"
            android:text="SAVE"
            android:textColor="@color/white"
            android:textSize="@dimen/text_dim_10"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtSaveClearSaleDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dim_10"
            android:background="@android:color/holo_purple"
            android:gravity="center"
            android:padding="@dimen/dim_5"
            android:text="@string/save_clear_sale"
            android:textColor="@color/white"
            android:textSize="@dimen/text_dim_10"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtCancelSaveSaleDialog"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:padding="@dimen/dim_5"
            android:text="CANCEL"
            android:textColor="@color/white"
            android:textSize="@dimen/text_dim_10"
            android:textStyle="bold" />


    </LinearLayout>
</LinearLayout>
