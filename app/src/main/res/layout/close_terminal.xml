<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/load_sale_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_16"
        android:layout_marginRight="@dimen/dim_16"
        android:layout_marginTop="@dimen/dim_8"
        android:text="Close Terminal"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_dim_15"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_16"
                android:layout_marginRight="@dimen/dim_16"
                android:layout_marginTop="@dimen/dim_5"
                android:gravity="center">

                <EditText
                    android:id="@+id/etxtCashAmountCloseTerminal"
                    style="@style/et_new_customer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Cash Amount"
                    android:inputType="numberDecimal"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_16"
                android:layout_marginRight="@dimen/dim_16"
                android:layout_marginTop="@dimen/dim_5"
                android:gravity="center">

                <EditText
                    android:id="@+id/etxtChequeAmountCloseTerminal"
                    style="@style/et_new_customer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Cheque Amount"
                    android:inputType="numberDecimal"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_16"
                android:layout_marginRight="@dimen/dim_16"
                android:layout_marginTop="@dimen/dim_5"
                android:gravity="center">

                <EditText
                    android:id="@+id/etxtCCAmountCloseTerminal"
                    style="@style/et_new_customer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Credit Card Amount"
                    android:inputType="numberDecimal"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_16"
                android:layout_marginRight="@dimen/dim_16"
                android:layout_marginTop="@dimen/dim_5"
                android:gravity="center">

                <EditText
                    android:id="@+id/etxtGCAmountCloseTerminal"
                    style="@style/et_new_customer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Gift Card Amount"
                    android:inputType="numberDecimal"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_16"
                android:layout_marginRight="@dimen/dim_16"
                android:layout_marginTop="@dimen/dim_5"
                android:gravity="center">

                <EditText
                    android:id="@+id/etxtOPTAmountCloseTerminal"
                    style="@style/et_new_customer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Other Payment Amount"
                    android:inputType="numberDecimal"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dim_5"
                android:layout_marginTop="@dimen/dim_20"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtCancelCloseTerminal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dim_20"
                    android:background="@drawable/background_selector"
                    android:padding="@dimen/dim_5"
                    android:text="Cancel"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_dim_15"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtConfirmCloseTerminal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dim_20"
                    android:background="@drawable/background_selector"
                    android:padding="@dimen/dim_5"
                    android:text="Confirm ?"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_dim_15"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
