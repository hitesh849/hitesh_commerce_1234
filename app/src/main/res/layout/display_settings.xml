<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dim_5"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="@dimen/dim_5"
                android:text="@string/layout_setting"
                android:textColor="@color/dark_pink"
                android:textSize="@dimen/text_dim_12" />

            <RadioGroup
                android:id="@+id/rdbtngrpLayoutSetting"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rdbtnWithCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_5"
                    android:background="@null"
                    android:checked="true"
                    android:padding="@dimen/dim_2"
                    android:text="With Image"
                    android:textColor="@android:color/darker_gray" />

                <RadioButton
                    android:id="@+id/rdbtnWithoutCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_5"
                    android:background="@null"
                    android:padding="@dimen/dim_2"
                    android:text="Without Image"
                    android:textColor="@android:color/darker_gray" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dim_5"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="@dimen/dim_5"
                android:text="@string/scan"
                android:textColor="@color/dark_pink"
                android:textSize="@dimen/text_dim_12" />

            <RadioGroup
                android:id="@+id/rdbtngrpScannerSetting"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rdbtnInternalScanner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_5"
                    android:background="@null"
                    android:checked="true"
                    android:padding="@dimen/dim_2"
                    android:text="Internal"
                    android:textColor="@android:color/darker_gray" />

                <RadioButton
                    android:id="@+id/rdbtnExternalScanner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_5"
                    android:background="@null"
                    android:padding="@dimen/dim_2"
                    android:text="External"
                    android:textColor="@android:color/darker_gray" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dim_5"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="@dimen/dim_5"
                android:text="@string/language"
                android:textColor="@color/dark_pink"
                android:textSize="@dimen/text_dim_12" />

            <RadioGroup
                android:id="@+id/rdbtngrpLangugeSetting"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rdbtnHindiLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_5"
                    android:background="@null"
                    android:checked="true"
                    android:padding="@dimen/dim_2"
                    android:text="@string/hindi"
                    android:visibility="gone"
                    android:textColor="@android:color/darker_gray" />

                <RadioButton
                    android:id="@+id/rdbtnEnglishLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_5"
                    android:background="@null"
                    android:padding="@dimen/dim_2"
                    android:text="@string/english"
                    android:textColor="@android:color/darker_gray" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim_5"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="@dimen/dim_5"
            android:text="Default Item QTY"
            android:textColor="@color/dark_pink"
            android:textSize="@dimen/text_dim_12" />

        <RadioGroup
            android:id="@+id/rdbtngrpProductQuantity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rdbtnProductQtyOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_5"
                android:background="@null"
                android:checked="true"
                android:padding="@dimen/dim_2"
                android:text="One"
                android:textColor="@android:color/darker_gray" />

            <RadioButton
                android:id="@+id/rdbtnProductQtyAsk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_5"
                android:background="@null"
                android:padding="@dimen/dim_2"
                android:text="Ask"
                android:textColor="@android:color/darker_gray" />
        </RadioGroup>
    </LinearLayout>


    <CheckBox
        android:id="@+id/chkbxShareWithWhatsApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_5"
        android:text="Send receipt to WhatsApp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/application_header_height"
        android:layout_marginLeft="@dimen/dim_16"
        android:layout_marginTop="@dimen/dim_16"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtSaveDisplaySetting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/dark_pink"
            android:gravity="center"
            android:paddingLeft="@dimen/dim_5"
            android:paddingRight="@dimen/dim_5"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtCancelDisplaySetting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dim_20"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:paddingLeft="@dimen/dim_5"
            android:paddingRight="@dimen/dim_5"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>