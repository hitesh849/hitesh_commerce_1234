<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@mipmap/add_item_background"
    android:orientation="vertical"
    android:padding="@dimen/dim_16">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Product"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_dim_15"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_5"
        android:layout_weight="10"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dim_1">


        <AutoCompleteTextView
            android:id="@+id/txtItemSearchAddNew"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_5"
            android:layout_weight="7"
            android:hint="@string/product_name"
            android:imeOptions="flagNoExtractUi"
            android:padding="@dimen/dim_5"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_dim_15" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center">

            <Button
                android:id="@+id/btnMinusQuantityAddNew"
                android:layout_width="@dimen/dim_20"
                android:layout_height="@dimen/dim_20"
                android:background="@drawable/rouneded_blue_bg"
                android:gravity="center"
                android:text="-"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_dim_15" />

            <TextView
                android:id="@+id/txtQuantityAddNew"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dim_10"
                android:layout_marginRight="@dimen/dim_10"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_dim_15"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnPlusQuantityAddNew"
                android:layout_width="@dimen/dim_20"
                android:layout_height="@dimen/dim_20"
                android:background="@drawable/rouneded_blue_bg"
                android:gravity="center"
                android:text="+"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_dim_15" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dim_5"
        android:layout_marginTop="@dimen/dim_15"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtDismissAddNew"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dim_20"
            android:background="@color/colorAccent"
            android:padding="@dimen/dim_5"
            android:text="@string/dismiss"
            android:textColor="@color/white"
            android:textSize="@dimen/text_dim_15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtAddToCartAddNew"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dim_20"
            android:background="@color/dark_pink"
            android:padding="@dimen/dim_5"
            android:text="@string/add_to_cart"
            android:textColor="@color/white"
            android:textSize="@dimen/text_dim_15"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>