<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_margin="@dimen/dim_16"
            android:layout_weight="2"
            android:gravity="top|left"
            android:orientation="vertical">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/etxtInputStoreNameStoreSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <EditText
                    android:id="@+id/etxtStoreNameStoreSetting"
                    style="@style/edit_text_theme"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:focusable="false"
                    android:hint="@string/store_name"
                    android:inputType="textNoSuggestions"

                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <EditText
                    android:id="@+id/etxtUrlStoreSetting"
                    style="@style/edit_text_theme"
                    android:layout_weight="1"
                    android:hint="@string/url"
                    android:inputType="textNoSuggestions"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <EditText
                    android:id="@+id/etxtUserNameStoreSettings"
                    style="@style/edit_text_theme"
                    android:layout_weight="1"
                    android:hint="@string/user_name"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <EditText
                    android:id="@+id/etxtPasswordStoreSettigs"
                    style="@style/edit_text_theme"
                    android:layout_weight="1"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <EditText
                    android:id="@+id/etxtCustomerIdStoreSettigs"
                    style="@style/edit_text_theme"
                    android:layout_weight="1"
                    android:hint="@string/customer_id"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/application_header_height"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtSaveStoreSetting"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/dark_pink"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dim_5"
                    android:paddingRight="@dimen/dim_5"
                    android:text="Save"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtCancelStoreSetting"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dim_20"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dim_5"
                    android:paddingRight="@dimen/dim_5"
                    android:text="Cancel"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtDemoStoreSetting"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dim_6"
                android:background="@drawable/background_selector"
                android:gravity="left"
                android:paddingLeft="@dimen/dim_5"
                android:paddingRight="@dimen/dim_5"
                android:text="Demo"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>