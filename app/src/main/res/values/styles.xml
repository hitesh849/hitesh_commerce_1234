<resources>

    <style name="MyMaterialTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>

    </style>

    <style name="PopupMenuListView" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:background">@color/white</item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="android:divider">@null</item>

    </style>

    <style name="PopupMenu" parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="MyMaterialTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="edit_text_theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_dim_12</item>
        <item name="android:paddingTop">@dimen/dim_12</item>
        <item name="android:paddingBottom">@dimen/dim_12</item>
        <item name="android:paddingRight">@dimen/dim_8</item>
        <item name="android:layout_marginTop">@dimen/dim_8</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="drop_down">
        <item name="android:padding">@dimen/dim_6</item>
        <item name="android:background">@drawable/edit_text_bg</item>
    </style>

    <style name="button_theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_dim_12</item>
        <item name="android:background">@drawable/button_theem</item>
        <item name="android:layout_marginTop">@dimen/dim_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/dim_8</item>
    </style>

    <style name="deshbord_button_blue">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_marginLeft">@dimen/dim_5</item>
        <item name="android:textSize">@dimen/text_dim_10</item>

    </style>

    <style name="et_new_customer">
        <item name="android:textSize">@dimen/text_dim_12</item>
        <item name="android:paddingBottom">@dimen/dim_10</item>
        <item name="android:paddingRight">@dimen/dim_8</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="button_new_customer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_dim_14</item>
        <item name="android:background">@drawable/button_theem</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/dim_8</item>
    </style>


    <style name="dashbord_textview">
        <item name="android:textSize">@dimen/text_dim_9</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="table_row">
        <item name="android:paddingLeft">@dimen/dim_8</item>
        <item name="android:paddingRight">@dimen/dim_8</item>
        <item name="android:paddingTop">@dimen/dim_4</item>
        <item name="android:paddingBottom">@dimen/dim_4</item>
    </style>
</resources>
